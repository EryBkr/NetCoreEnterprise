@model EnterpriseProject.Project.MVCWebUI.Models.ProductListViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Add</h1>

<form asp-controller="Admin" asp-action="Add" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Product.Name">Product Name</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Product.Name">
        <span asp-validation-for="Product.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.CategoryId">Cetegory Id</label>
        <select  class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"  asp-for="Product.CategoryId">
            @foreach (var item in Model.Categories)
            {
                <option value="@item.Id">@item.Name</option>
            }

        </select>
        <span asp-validation-for="Product.CategoryId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.UnitPrice">Price</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Product.UnitPrice">
        <span asp-validation-for="Product.UnitPrice"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Stock">Stock</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Product.Stock">
        <span asp-validation-for="Product.Stock"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
